@model Post
<div class="main_container_body_post" >
    <div class="main_body_image_post  w-75  flex-row  card" style="margin:0 auto;height:350px;"    >
        <div class="Rfc_post"   >
            <img src="@Model.picture.Location"  height="350px"  />
        </div>
        <div style="width:80%;margin-left:10px;"  class="Lfc_post"  >
            <h1>@Model.Post_title</h1>
            <p>@Model.Description</p>
        </div>
    </div>
</div>